/* pages/project/project.wxss */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 保证内容靠左对齐 */
  justify-content: flex-start;
}

.nav-bar {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 230rpx;
}

.nav-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  
}

.panels {
  margin-top: 20rpx;
}

.divider {
  height: 1px;
  background-color: #eee;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.weui-panel__hd {
  display: flex;
  align-items: center;
  cursor: pointer; /* 添加手型图标，提示用户可以点击 */
}

.toggle-icon {
  margin-right: 10rpx;
  width: 24rpx;
  height: 24rpx;
}

.page__bd {
  height: 100%; /* 根据需要设置合适的高度 */
}

.scroll-y {
  overflow-y: auto; /* 允许纵向滚动 */
}