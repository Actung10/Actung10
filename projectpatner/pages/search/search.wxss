/* pages/search/search.wxss */
.divider {
  height: 1rpx; /* 分隔线高度 */
  background-color: #eee; /* 分隔线颜色 */
  width: 100%; /* 分隔线宽度 */
  margin-top: 0rpx; /* 分隔线与项目文字的间距 */
}

.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  height: 100%;
  justify-content: flex-start;
  align-items: flex-start;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.icon {
  width: 44rpx;
  height: 44rpx;
}

.back-button {
  padding: 10rpx;
}

.title {
  margin-right: 300rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.search-box {
  margin-bottom: 20px;
}
.project-list {
  display: block;
}
.project-item {
  padding: 10px;
  border-bottom: 1px solid #e0e0e0;
}

.page__bd {
  height: 100%; /* 根据需要设置合适的高度 */
}

.scroll-y {
  overflow-y: auto; /* 允许纵向滚动 */
}


.weui-cell_example .weui-cell__hd image{width:20rpx;height:20rpx;display:block;margin-right:16px}