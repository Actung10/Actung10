<!--pages/home/home.wxml-->
<page-meta root-font-size="system"/>
<scroll-view class="scroll-view" scroll-y type="list" style="height: 100%;">
<navigation-bar title="Project Partener" back="{{false}}"
 color="black" background="#DEDEDE"></navigation-bar>
<!--<text>pages/home/home.wxml</text>-->

<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
	<view class="page__bd">
		<view class="weui-search-bar weui-search-bar_filled-grey {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
			<form class="weui-search-bar__form"
      aria-role="combobox"
      aria-haspopup="true"
      aria-expanded="{{inputVal.length > 0 ? 'true' : 'false'}}"
      aria-owns="searchResult"
      >
        <view aria-hidden="true" class="weui-search-bar__box">
          <i class="weui-icon-search"></i>
          <view class="weui-search-bar__words" bindtap=searchInput">搜索</view>
          <input aria-controls="searchResult" type="text" class="weui-search-bar__input {{isFocus ? 'weui-search-bar__input_focus' : ''}}" placeholder="搜索项目名称、发起人、指导教师" value="{{inputVal}}" bindinput="inputTyping" focus="{{inputShowed}}" bindblur="blurInput"

          />
          <view class="weui-search-bar__mask"></view>
          <view aria-role="button" aria-label="清除" class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput"></view>
        </view>
        <label class="weui-search-bar__label" bindtap="showInput">
          <i class="weui-icon-search"></i>
          <span class="weui-search-bar__label__text">搜索</span>
        </label>
			</form>
      <view aria-role="button" class="weui-search-bar__cancel-btn" bindtap="hideInput">取消</view>
		</view>
	</view>


<view class="page__bd">
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">项目列表</view>
    <view class="divider" />
    <view class="weui-panel__bd">
      <block wx:for="{{projects}}" wx:key="id">
        <navigator aria-labelledby="{{item.name}}" class="weui-media-box weui-media-box_appmsg" data-id="{{item.id}}" bindtap="goToProjectDetail">
          <view aria-hidden="true" class="weui-media-box__hd">
            <image class="weui-media-box__thumb" src="/static/pic.png" alt></image>
          </view>
          <view aria-hidden="true" id="{{item.name}}" class="weui-media-box__bd">
            <text class="weui-media-box__title">{{item.name}}</text>
            <view class="weui-media-box__desc">{{item.introduction}}</view>
          </view>
        </navigator>
        <view class="divider" />
      </block>
    </view>
  </view>
</view>
</view>
</scroll-view>