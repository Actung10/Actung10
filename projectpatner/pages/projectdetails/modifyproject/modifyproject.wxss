/* pages/projectdetails/modifyproject/modifyproject.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  height: 100%;
  justify-content: flex-start;
  align-items: flex-start;
}

.header {
  display: flex;
  margin-left: 0rpx;
}

.back-button {
  display: flex;
  margin-left: 0rpx;
}

.icon {
  width: 44rpx;
  height: 44rpx;
  
}

.back-text {
  margin-left: 0rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.title {
  font-size: 32rpx;
  color: #333;
  flex-grow: 1;
  text-align: center;
  justify-content:center;
  margin-left: 175rpx;
  font-weight: bold;
}

.form {
  margin-top: 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.item-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.input {
  border: 3rpx solid #ddd;
  padding: 10rpx;
  border-radius: 5rpx;
  font-size: 32rpx;
  width: 700rpx;
  height:60rpx;
  box-sizing: border-box;
}

.textarea{
  border: 3rpx solid #ddd;
  padding: 10rpx;
  border-radius: 5rpx;
  font-size: 32rpx;
  width: 700rpx;
  height:500rpx;
  box-sizing: border-box;
}

.publish-button {
  margin-top: 40rpx;
  background-color: #1aad19;
  color: white;
  font-size: 32rpx;
  border-radius: 5rpx;
}