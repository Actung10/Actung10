/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.tabs {
  display: flex;
  justify-content: flex-start; /* 按钮紧挨在一起，不平均分配空间 */
  align-items: center;
  margin: 0 auto; /* 将整个tabs组居中显示 */
  padding: 0 20rpx; /* 左右留白 */
}

.tab-item {
  margin-right: 20rpx; /* 按钮之间的间隔 */
  text-align: center;
  position: relative; /* 为底线绝对定位 */
}

.tab-text {
  display: inline-block; /* 使底线能够正确定位 */
  padding: 10rpx;
  color: black; /* 默认文字颜色 */
  position: relative; /* 为底线绝对定位 */
  z-index: 1; /* 确保文字在底线之上 */
}

.tab-underline {
  display: block;
  width: 100%;
  height: 2rpx; /* 底线高度 */
  background-color: black; /* 默认与文字颜色一致 */
  position: absolute;
  bottom: 0; /* 底线位置 */
  left: 0;
  transition: background-color 0.3s; /* 颜色变化动画 */
  opacity: 0; /* 默认不显示 */
}

.tab-underline.active {
  background-color: green; /* 当前激活的按钮底线颜色为绿色 */
  opacity: 1; /* 激活时显示 */
}

.weui-cell__ft {
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 42.9rpx; /* 根据实际图标大小调整 */
  height: 40.3rpx; /* 根据实际图标大小调整 */
}

